  overflow-y: hidden;
}
.userinfo {
	display: flex;
	flex-direction: column;
	padding: 50rpx 0;
	align-items: center;
	background: #00bbff;
  width: 750rpx;
}

.userinfo-avatar {
	width: 160rpx;
	height: 160rpx;
	margin: 20rpx;
	border-radius: 50%;
}
.userinfo-nickname {
  margin-top: 20rpx;
  color: #FFF;
}
.temp {
    height: 16rpx;
    background: #eee;
}
.person_info{
  color: #666;
  font-size: 14px;
}
.lie1 {
  font-size: 40rpx;
  margin-left: 10px;
